{
  "name": "vaadin-pit",
  "version": "1.0.0",
  "description": "Platform in Test (PiT) - Vaadin testing suite converted to TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@playwright/test": "^1.48.0",
    "axios": "^1.7.7",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.4.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "inquirer": "^12.0.0",
    "ora": "^8.1.0",
    "semver": "^7.6.3",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.0",
    "@types/semver": "^7.5.8",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "vaadin",
    "testing",
    "platform",
    "typescript"
  ],
  "author": "Vaadin Ltd",
  "license": "Apache-2.0"
}
